<model name="orderTechnologicalProcessWaste"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <string name="number" unique="true"/>
        <belongsTo name="orderTechnologicalProcess" model="orderTechnologicalProcess" required="true"/>
        <belongsTo name="orderPack" model="orderPack"/>
        <belongsTo name="order" model="order"/>
        <belongsTo name="product" model="product" plugin="basic"/>
        <belongsTo name="technologicalProcess" model="technologicalProcess" plugin="technologies"/>
        <decimal name="wasteQuantity" required="true">
            <validatesRange from="0" exclusively="true"/>
            <validatesUnscaledValue max="7"/>
            <validatesScale max="5"/>
        </decimal>
        <dictionary name="causeOfWaste" dictionary="causesOfWastes"/>
        <datetime name="date" required="true" copyable="false"/>
        <belongsTo name="worker" model="staff" plugin="basic" copyable="false"/>
        <string name="description">
            <validatesLength max="2048"/>
        </string>
    </fields>

    <hooks>
        <onSave class="com.qcadoo.mes.orders.hooks.OrderTechnologicalProcessWasteHooks"
                method="onSave"/>
        <onCopy class="com.qcadoo.mes.orders.hooks.OrderTechnologicalProcessWasteHooks"
                method="onCopy"/>
        <validatesWith class="com.qcadoo.mes.orders.hooks.OrderTechnologicalProcessWasteHooks"
                method="validatesWith"/>
    </hooks>

    <identifier expression="#number"/>
</model>
