<model name="coverageProductLogging" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="coverageProduct" model="coverageProduct"
			required="true" />

		<datetime name="date" />

		<belongsTo name="delivery" model="delivery" plugin="deliveries" />
		<belongsTo name="order" model="order" plugin="orders" />
		<belongsTo name="operation" model="operation" plugin="technologies" />

		<decimal name="reserveMissingQuantity" />
		<decimal name="changes" />

		<enum name="eventType"
			values="01warehouseState,02delivery,03operationInput,04orderInput" />
		<enum name="state" values="01covered,02lack" />
	</fields>
	<hooks />
</model>