<view defaultAuthorizationRole="ROLE_ANALYSIS_VIEWER" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      name="employeeWorkingTimeSettlement" menuAccessible="true" modelPlugin="productionCounting" modelName="productionBalance">

    <component type="window" name="window" reference="window">
        <ribbon>
            <group name="actions">
                <bigButton name="loadData" icon="startIcon24.png" state="enabled">
                    <script>
                        <![CDATA[
                                this.addOnChangeListener({
                                    onClick: function() {
                                        QCD.employeeWorkingTimeSettlement.loadData();
                                    }
                                });
                            ]]>
                    </script>
                </bigButton>
            </group>
            <group name="genericExport">
                <smallButton name="csv" state="enabled" icon="exportToCsvIcon16.png">
                    <script>
                        <![CDATA[
                            this.addOnChangeListener({
                                onClick: function() {
                                    QCD.employeeWorkingTimeSettlement.exportToCsv();
                                }
                            });
                        ]]>
                    </script>
                </smallButton>
            </group>
        </ribbon>
        <windowTab name="mainTab">
            <component type="form" name="form" reference="form">
                <component type="gridLayout" name="gridLayout"
                           reference="gridLayout" columns="3" rows="2">
                    <layoutElement column="1" row="1">
                        <component type="calendar" name="dateFrom" reference="dateFrom"
                                   hasDescription="true"/>
                    </layoutElement>
                    <layoutElement column="1" row="2">
                        <component type="calendar" name="dateTo" reference="dateTo"/>
                    </layoutElement>
                </component>
            </component>
        </windowTab>
        <windowTab name="dataTab">
            <component type="form" name="dataForm" reference="dataForm">
                <component type="flowLayout" name="layout">
                    <component type="staticPage" name="employeeWorkingTimeSettlement" reference="employeeWorkingTimeSettlement">
                        <option type="page" value="productionCounting/employeeWorkingTimeSettlement.jsp"/>
                    </component>
                </component>
            </component>
        </windowTab>

        <option type="header" value="false"/>
        <option type="fixedHeight" value="true"/>
    </component>
    <hooks>
    </hooks>
</view>
