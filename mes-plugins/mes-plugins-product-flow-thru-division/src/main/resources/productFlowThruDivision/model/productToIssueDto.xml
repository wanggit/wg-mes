<model name="productToIssueDto" auditable="false" deletable="false" insertable="false" updatable="false"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <string name="issueNumber"/>
        <string name="locationFromNumber"/>
        <integer name="locationFrom_id"/>
        <string name="locationToNumber"/>
        <integer name="locationTo_id"/>
        <string name="orderNumber"/>
        <datetime name="orderStartDate"/>
        <enum name="state" values="01draft,02inProgress"/>
        <string name="productNumber"/>
        <string name="productName"/>
        <decimal name="demandQuantity"/>
        <decimal name="quantityPerUnit"/>
        <decimal name="quantityToIssue"/>
        <decimal name="issuedQuantity"/>
        <decimal name="quantityInLocationFrom"/>
        <decimal name="quantityInLocationTo"/>
        <decimal name="conversion"/>
        <decimal name="quantityToIssueInAddUnit"/>
        <string name="unit"/>
        <string name="unitAdditional"/>
        <boolean name="issued" default="false"/>
        <decimal name="correction"/>
    </fields>

    <identifier expression="#issueNumber + ' - ' + #productNumber"/>

    <masterModel plugin="productFlowThruDivision" model="productsToIssue"/>
</model>
