<model name="issueDto" auditable="false" deletable="false" insertable="false" updatable="false"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <string name="warehouseIssueNumber"/>
        <string name="productName"/>
        <string name="productNumber"/>
        <string name="productUnit"/>
        <string name="locationNumber"/>
        <string name="documentNumber"/>
        <decimal name="demandQuantity"/>
        <decimal name="conversion"/>
        <decimal name="issueQuantity"/>
        <decimal name="locationToQuantity"/>
        <decimal name="quantityPerUnit"/>
        <decimal name="locationsQuantity"/>
        <decimal name="additionalDemandQuantity"/>
        <boolean name="issued" default="false"/>
        <datetime name="dateOfIssued"/>
        <enum name="documentState" values="01draft,02accepted"/>
        <enum name="warehouseIssueState" values="01draft,02inProgress,03discard,04completed"/>
        <integer name="locationId"/>
    </fields>

    <identifier expression="#issueNumber + ' - ' + #productNumber"/>

    <masterModel plugin="productFlowThruDivision" model="issue"/>
</model>
