<view defaultAuthorizationRole="ROLE_TECHNOLOGIES" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      name="technologyOperationComponentProcessListDetails"
      modelName="technologyOperationComponent">

    <component type="window" name="window">
        <ribbon>
            <template name="standardFormTemplate" excludeItems="actions.copy, actions.delete, actions.saveNew"/>
        </ribbon>

        <windowTab name="mainTab">
            <component type="form" name="form" reference="form">
                <component type="gridLayout" name="gridLayout" columns="1"
                           rows="1">
                    <layoutElement column="1" row="1">
                        <component type="lookup" name="technologicalProcessList" field="technologicalProcessList"
                                   reference="technologicalProcessList">
                            <option type="column" name="name" fields="name" width="300" link="true"/>
                            <option type="searchable" value="name"/>
                            <option type="orderable" value="name"/>
                            <option type="expression" value="#number"/>
                            <option type="fieldCode" value="number"/>

                            <criteriaModifier
                                    class="com.qcadoo.mes.technologies.criteriaModifiers.TOCProcessListDetailsCriteriaModifiers"
                                    method="showTechnologicalProcessListsForOperation"/>
                        </component>
                    </layoutElement>
                </component>

                <option type="header" value="true"/>
                <option type="expression" value="(#nodeNumber != null ? #nodeNumber + ' ' : '') + #operation['number']"/>
            </component>
        </windowTab>
    </component>

    <hooks>
        <beforeRender class="com.qcadoo.mes.technologies.hooks.TOCProcessListDetailsHooks"
                      method="onBeforeRender"/>
    </hooks>
</view>
