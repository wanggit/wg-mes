<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
                    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
                    plugin="orders" view="ordersParameters">

    <windowTab name="includeComponentsTab">
        <component type="gridLayout" name="includeComponentsGrid" reference="includeComponentsGrid"
                   columns="1" rows="3">
            <layoutElement column="1" row="1">
                <component type="checkbox" name="includeComponents" reference="includeComponents"
                           field="#{form}.includeComponents" hasDescription="true"/>
            </layoutElement>
            <layoutElement column="1" row="2">
                <component type="checkbox" name="automaticallyGenerateOrdersForComponents"
                           reference="automaticallyGenerateOrdersForComponents"
                           field="#{form}.automaticallyGenerateOrdersForComponents" hasDescription="true">
                <listener event="onChange"
                          class="com.qcadoo.mes.ordersForSubproductsGeneration.hooks.ParametersHooksOFSPG"
                          method="onChangeAutomaticallyGenerate"/>
                </component>
            </layoutElement>
            <layoutElement column="1" row="3">
                <component type="checkbox" name="ordersGeneratedByCoverage" reference="ordersGeneratedByCoverage"
                           field="#{form}.ordersGeneratedByCoverage" hasDescription="true"/>
            </layoutElement>
        </component>
    </windowTab>


</windowTabExtension>
