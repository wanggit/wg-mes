<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
                    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
                    plugin="orders" view="planningParameters">

        <windowTab name="assignmentToShiftTab" reference="assignmentToShiftTab">
            <component type="gridLayout" name="assignmentToShiftTabGridLayout"
                       columns="2" rows="3">
                <layoutElement column="1" row="1">
                    <component type="checkbox" name="hideAssignedStaff" field="#{form}.hideAssignedStaff"
                               reference="hideAssignedStaff" hasDescription="true">
                    <option type="labelWidth" value="40"/>
                    </component>
                </layoutElement>
            </component>
        </windowTab>

</windowTabExtension>