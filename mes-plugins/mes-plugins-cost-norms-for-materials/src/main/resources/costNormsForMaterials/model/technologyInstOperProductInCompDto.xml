        <decimal name="lastPurchaseCost"/>
        <string name="lastPurchaseCostCurrency"/>
        <decimal name="averageCost"/>
        <string name="averageCostCurrency"/>
        <decimal name="costForOrder"/>
        <string name="costForOrderCurrency"/>
