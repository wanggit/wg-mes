<model name="basicProductionCounting" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="order" model="order" plugin="orders" />
		<belongsTo name="product" model="product" plugin="basic" />
		<decimal name="plannedQuantity" persistent="false"/>
		<decimal name="usedQuantity">
			<validatesUnscaledValue max="9" />
			<validatesScale max="5" />
		</decimal>
		<decimal name="producedQuantity">
			<validatesUnscaledValue max="9" />
			<validatesScale max="5" />
		</decimal>
	
		<hasMany name="productionCountingQuantities" model="productionCountingQuantity"
			plugin="basicProductionCounting" joinField="basicProductionCounting" cascade="delete" />
	</fields>
	
	<hooks>
		<validatesWith
			class="com.qcadoo.mes.basicProductionCounting.validators.BasicProductionCountingValidators"
			method="validatesWith" />
		<onSave
				class="com.qcadoo.mes.basicProductionCounting.hooks.BasicProductionCountingHooks"
				method="onSave" />
	</hooks>
</model>
