<view defaultAuthorizationRole="ROLE_PLANNING" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="parameterOutputColumnDetails" modelName="parameterOutputColumn">

	<component name="window" type="window" reference="window">
		<ribbon>
			<template name="standardFormTemplate" excludeItems="actions.copy" />
		</ribbon>

		<windowTab name="mainTab" reference="mainTab">
			<component type="form" name="form" reference="form">
				<script>
					<![CDATA[
						var listener = {
					    	onSetValue: function() {
								var isSaved = (#{form}.getValue().content && #{form}.getValue().content.entityId);
								
								if (isSaved) { 
									#{columnForOutputProductsLookup}.setEnabled(false, true);
								} else {
									#{columnForOutputProductsLookup}.setEnabled(true, true);
								}
							}
						};
						
						#{form}.addOnChangeListener(listener);
					]]>
				</script>
				<component type="gridLayout" name="parameterOutputColumnGridLayout"
					columns="4" rows="1" hasBorders="false">

					<layoutElement column="1" row="1" width="3">
						<component type="lookup" name="columnForOutputProducts"
							field="columnForOutputProducts" reference="columnForOutputProductsLookup">
							<option type="column" name="name" fields="name"
								expression="'@' + #name" link="true" />
							<option type="column" name="description" fields="description"
								expression="'@' + #description" />

							<option type="orderable" value="name,description" />

							<option type="expression" value="'@' + #name" />
							<option type="fieldCode" value="identifier" />
						</component>
					</layoutElement>
				</component>

				<option type="header" value="true" />
				<option type="expression" value="'@' + #columnForOutputProducts[name]" />
			</component>
		</windowTab>

	</component>

</view>