<model name="columnForOutputProducts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

	<fields>
		<string name="identifier" required="true">
			<validatesLength max="255" />
		</string>
		<string name="name" required="true">
			<validatesLength max="1024" />
		</string>
		<string name="description">
			<validatesLength max="1024" />
		</string>
		<string name="columnFiller" required="true">
			<validatesLength max="255" />
		</string>

		<enum name="alignment" values="01left,02right" default="01left"
			required="true" />

		<hasMany name="parameterOutputColumns" plugin="workPlans"
			model="parameterOutputColumn" joinField="columnForOutputProducts"
			cascade="delete" />
	</fields>

	<hooks />

	<identifier expression="#identifier" />
</model>