<model name="numberPatternElement" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
    <fields>
        <belongsTo name="numberPattern" model="numberPattern" required="true"/>
        <enum name="element" required="true" values="01dd,02mm,03rr,04rrrr,05999,069999,0799999,08xx"/>
        <string name="value">
            <validatesLength max="10" />
        </string>
        <priority name="succession" scope="numberPattern" />

        <enum name="sequenceCycle" values="01monthly,02annual"/>

    </fields>

    <hooks>
        <validatesWith class="com.qcadoo.mes.basic.hooks.NumberPatternElementHooks"
                       method="validatesWith"/>
        <validatesWith class="com.qcadoo.mes.basic.hooks.NumberPatternElementHooks"
                       method="onSave"/>
    </hooks>
</model>
