<model name="timetableExceptionPerShiftDto" activable="false" auditable="false" deletable="false" insertable="false"
       updatable="false"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
    <fields>
        <string name="name"/>
        <datetime name="fromDate"/>
        <datetime name="toDate"/>
        <enum name="type" required="true" values="01freeTime,02workTime"
              default="01freeTime" />
        <string name="shifts"/>
        <string name="productionLines"/>
        <boolean name="relatesToPrevDay" default="false"/>

        <integer name="shiftId"/>
        <belongsTo name="shift" model="shift" persistent="false"/>

    </fields>
    <identifier expression="#name"/>
    <masterModel plugin="basic" model="shiftTimetableException"/>
</model>
