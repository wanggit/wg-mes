<model name="coverageAnalysisForOrderDto"
       activable="false" auditable="false" deletable="false" insertable="false" updatable="false"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">

    <fields>
        <belongsTo name="materialRequirementCoverage" model="materialRequirementCoverage" persistent="false"/>

        <integer name="materialRequirementCoverageId"/>

        <string name="orderNumber"/>
        <string name="orderName"/>

        <string name="orderedProductNumber"/>
        <string name="orderedProductUnit"/>

        <datetime name="orderStartDate"/>
        <datetime name="orderFinishDate"/>


        <decimal name="plannedQuantity">
            <validatesUnscaledValue max="11"/>
            <validatesScale max="5"/>
        </decimal>

        <enum name="coverageDegree" values="01total,02partial,03zero"/>

        <datetime name="coveredFromTheDay"/>

        <datetime name="deliveryTime"/>

        <datetime name="componentsProductionDate"/>

    </fields>

    <hooks/>
    <masterModel plugin="orderSupplies" model="coverageAnalysisForOrder"/>

</model>