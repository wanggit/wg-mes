<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
                    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
                    plugin="costNormsForMaterials" view="costNormsForMaterialsInOrderList">

	<windowTab name="orderExternalServiceCosts">
		<component type="gridLayout" name="orderExternalServicesCostLayout" columns="1"
				   rows="1">
			<layoutElement column="1" row="1">
				<component type="grid" name="orderExternalServiceCosts" reference="orderExternalServiceCosts"
						   source="#{order}.orderExternalServiceCosts">
					<option type="column" name="operationNumber" fields="technologyOperationComponent"
							expression="#technologyOperationComponent?.get('operation').get('number')" link="true" width="150"/>
					<option type="column" name="productNumber" fields="product"
							expression="#product?.get('number')" link="true" width="100"/>
					<option type="column" name="unitCost" fields="unitCost" width="75"/>
					<option type="column" name="quantity" fields="quantity" width="50"/>
					<option type="column" name="productUnit" fields="product"
							expression="#product['unit']"	width="50"/>
					<option type="column" name="totalCost" fields="totalCost"  width="75"/>

					<option type="order" column="operationNumber" direction="asc"/>

					<option type="searchable" value="operationNumber,productNumber,unitCost,quantity,productUnit,totalCost"/>
					<option type="orderable" value="operationNumber,productNumber,unitCost,quantity,productUnit,totalCost"/>

					<option type="correspondingView" value="techSubcontracting/orderExternalServiceCostDetails" />
					<option type="correspondingComponent" value="form" />
					<option type="correspondingViewInModal" value="true" />

					<option type="fullscreen" value="true"/>
					<option type="multiselect" value="true"/>

					<option type="creatable" value="true" />
					<option type="deletable" value="true" />
				</component>
			</layoutElement>
		</component>
	</windowTab>
	
</windowTabExtension>