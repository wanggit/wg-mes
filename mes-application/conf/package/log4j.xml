	</logger>

	<logger name="com.qcadoo.view">
		<level value="info" />
		<appender-ref ref="view-log" />
	</logger>

	<logger name="com.qcadoo.view.internal.JsonMapperHttpMessageConverter" additivity="false">
		<level value="debug" />
		<appender-ref ref="connector-log" />
	</logger>

	<logger name="com.qcadoo.view.internal.internal.ViewComponentsResolverImpl" additivity="false">
		<level value="debug" />
		<appender-ref ref="view-log" />
	</logger>

	<logger name="com.qcadoo.view.internal.xml.ViewDefinitionParserImpl" additivity="false">
		<level value="debug" />
		<appender-ref ref="view-log" />
	</logger>

	<logger name="PERFORMANCE" additivity="false">
		<level value="warn" />
		<appender-ref ref="performance-log" />
	</logger>

	<logger name="TRANSLATION" additivity="false">
		<level value="warn" />
		<appender-ref ref="translation-log" />
	</logger>

	<root>
		<level value="debug" />
		<appender-ref ref="root-log" />
		<appender-ref ref="warn-log" />
	</root>

</log4j:configuration>