	<logger name="com.qcadoo.model.internal.definitionconverter.ModelXmlToDefinitionConverterImpl" additivity="false">
		<level value="info" />
		<appender-ref ref="model-log" />
	</logger>

	<logger name="com.qcadoo.model.internal.hbmconverter.ModelXmlToHbmConverterImpl" additivity="false">
		<level value="info" />
		<appender-ref ref="model-log" />
	</logger>

	<logger name="com.qcadoo.plugin">
		<level value="info" />
		<appender-ref ref="plugin-log" />
	</logger>

	<logger name="com.qcadoo.plugin.internal.accessor.DefaultPluginAccessor" additivity="false">
		<level value="info" />
		<appender-ref ref="plugin-log" />
	</logger>

	<logger name="com.qcadoo.plugin.internal.descriptorparser.DefaultPluginDescriptorParser" additivity="false">
		<level value="info" />
		<appender-ref ref="plugin-log" />
	</logger>

	<logger name="com.qcadoo.report">
		<level value="info" />
		<appender-ref ref="report-log" />
	</logger>

	<logger name="com.qcadoo.security">
		<level value="info" />
		<appender-ref ref="security-log" />
	</logger>

	<logger name="com.qcadoo.mes.basic.logging" additivity="false">
		<level value="info" />
