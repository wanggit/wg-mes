		</layout>
	</appender>

	<logger name="org.apache">
		<level value="info" />
	</logger>

	<logger name="org.hibernate">
		<level value="info" />
	</logger>

	<logger name="org.hibernate.SQL" additivity="false">
		<level value="debug" />
		<appender-ref ref="sql-log" />
	</logger>

	<logger name="org.hibernate.cache" additivity="false">
		<level value="debug" />
		<appender-ref ref="cache-log" />
	</logger>

	<logger name="org.hibernate.cfg" additivity="false">
		<level value="debug" />
		<appender-ref ref="cfg-log" />
	</logger>

	<logger name="org.hibernate.dialect.function.TemplateRenderer" additivity="false">
		<level value="error" />
	</logger>

	<logger name="org.hibernate.tool" additivity="false">
		<level value="debug" />
		<appender-ref ref="tool-log" />
	</logger>

	<logger name="org.springframework">
		<level value="info" />
	</logger>

	<logger name="org.springframework.beans.factory.support.DefaultListableBeanFactory" additivity="false">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.security.web.DefaultSecurityFilterChain" additivity="false">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" additivity="false">
		<level value="debug" />
	</logger>

	<logger name="net.sf.ehcache">
		<level value="info" />
	</logger>

	<logger name="com.zaxxer">
		<level value="info" />
	</logger>

	<logger name="com.qcadoo.mes">
		<level value="debug" />
	</logger>

	<logger name="com.qcadoo.mes.basic.activityStream.model.ActivityDto" additivity="false">
		<level value="debug" />
		<appender-ref ref="activity-log" />
	</logger>

	<logger name="com.qcadoo.mes.integration">
		<level value="debug" />
		<appender-ref ref="connector-log" />
	</logger>

	<logger name="com.qcadoo.mes.internal">
		<level value="error" />
	</logger>

	<logger name="com.qcadoo.localization" additivity="false">
